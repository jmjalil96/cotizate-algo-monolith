// Generator configuration - ONLY ONE generator allowed
generator client {
  provider = "prisma-client-js"
}

// Datasource configuration - ONLY ONE datasource allowed
datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

